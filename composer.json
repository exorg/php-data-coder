{
    "name": "exorg/data-coder",
    "description": "Expansible Universal Data and Data Files Decoder/Encoder.",
    "type": "library",
    "keywords": [
        "exorg",
        "php-data-coder",
        "data-coder",
        "decoder",
        "encoder"
    ],
    "license": "MIT",
    "authors" : [
        {
            "name": "Katarzyna Krasi≈Ñska",
            "email": "katheroine@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "8.1 - 8.3",
        "symfony/yaml": "^6.3",
        "garoevans/php-enum": "^1.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10.4"
    },
    "autoload": {
        "psr-4": {
            "ExOrg\\DataCoder\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExOrg\\DataCoder\\": [
                "tests/unit_tests/",
                "tests/testing_environment/helpers/",
                "tests/testing_environment/classes/"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests",
        "sniff": "vendor/bin/phpcs ./src ./tests",
        "check": "composer test; composer sniff"
	}
}
